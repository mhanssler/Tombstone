############
# Tombstone + Supabase (Docker, offline/dev)
#
# Usage:
#   docker compose --env-file .env.docker up --build
#
# Notes:
# - Secrets below are DEVELOPMENT-ONLY. Change before any real deployment.
# - TOMBSTONE_SUPABASE_URL is what the browser uses. For other devices on your LAN,
#   set it to http://<this-computer-lan-ip>:54321
############

TOMBSTONE_SUPABASE_URL=http://localhost:54321

# Optional public Supabase URL (for Vercel/remote clients via tunnel)
# Example: https://supabase.yourdomain.com
PUBLIC_SUPABASE_URL=

############
# Secrets (DEV ONLY)
############

POSTGRES_PASSWORD=tombstone-postgres-dev-password

# Must be >= 32 chars
JWT_SECRET=replace-with-a-new-32-plus-char-secret

# JWTs signed with JWT_SECRET above
ANON_KEY=replace-with-generated-anon-jwt
SERVICE_ROLE_KEY=replace-with-generated-service-role-jwt

DASHBOARD_USERNAME=supabase
DASHBOARD_PASSWORD=this_password_is_insecure_and_should_be_updated

# Supavisor / Vault / Meta (DEV ONLY)
SECRET_KEY_BASE=UpNVntn3cDxHJpq99YMc1T1AQgQpc8kfYTuRgBiYa15BLrx8etQoXz3gZv1_u2oq
VAULT_ENC_KEY=0123456789abcdef0123456789abcdef
PG_META_CRYPTO_KEY=0123456789abcdef0123456789abcdef

############
# Database
############

POSTGRES_HOST=db
POSTGRES_DB=postgres
POSTGRES_PORT=5432

# Host port for the DB pooler (supavisor) to expose Postgres on your machine.
POSTGRES_EXTERNAL_PORT=54322

############
# Supavisor (Database Pooler)
############

POOLER_PROXY_PORT_TRANSACTION=54329
POOLER_DEFAULT_POOL_SIZE=20
POOLER_MAX_CLIENT_CONN=100
POOLER_TENANT_ID=tombstone-local
POOLER_DB_POOL_SIZE=5

############
# API Proxy (Kong)
############

KONG_HTTP_PORT=54321
KONG_HTTPS_PORT=5443

############
# API (PostgREST)
############

PGRST_DB_SCHEMAS=public,storage,graphql_public

############
# Auth (GoTrue)
############

SITE_URL=http://localhost:5173
ADDITIONAL_REDIRECT_URLS=
JWT_EXPIRY=3600
DISABLE_SIGNUP=false
API_EXTERNAL_URL=http://localhost:54321

MAILER_URLPATHS_CONFIRMATION="/auth/v1/verify"
MAILER_URLPATHS_INVITE="/auth/v1/verify"
MAILER_URLPATHS_RECOVERY="/auth/v1/verify"
MAILER_URLPATHS_EMAIL_CHANGE="/auth/v1/verify"

ENABLE_EMAIL_SIGNUP=true
ENABLE_EMAIL_AUTOCONFIRM=true
SMTP_ADMIN_EMAIL=admin@example.com
SMTP_HOST=localhost
SMTP_PORT=25
SMTP_USER=
SMTP_PASS=
SMTP_SENDER_NAME=Tombstone
ENABLE_ANONYMOUS_USERS=false

ENABLE_PHONE_SIGNUP=false
ENABLE_PHONE_AUTOCONFIRM=false

############
# Studio (Dashboard)
############

STUDIO_PORT=54323
STUDIO_DEFAULT_ORGANIZATION=Default Organization
STUDIO_DEFAULT_PROJECT=Tombstone (Local)
SUPABASE_PUBLIC_URL=http://localhost:54321
IMGPROXY_ENABLE_WEBP_DETECTION=true
OPENAI_API_KEY=

# Optional: if you use Cloudflare Tunnel profile "public"
CLOUDFLARE_TUNNEL_TOKEN=

############
# Functions
############

FUNCTIONS_VERIFY_JWT=false

############
# Logs / Analytics
############

LOGFLARE_PUBLIC_ACCESS_TOKEN=logflare-public-dev
LOGFLARE_PRIVATE_ACCESS_TOKEN=logflare-private-dev
DOCKER_SOCKET_LOCATION=/var/run/docker.sock

# BigQuery (unused)
GOOGLE_PROJECT_ID=
GOOGLE_PROJECT_NUMBER=
